<div class="container-dashboard">
  <div class="container-left">
    <div class="container-profil">
      <h1><%= current_user.nickname %></h1>
        <% if current_user.photo.attached? %>
          <%= cl_image_tag current_user.photo.key %>
        <%else %>
          <%= image_tag "https://res.cloudinary.com/dcd4fkkhk/image/upload/v1678717126/No-Image_uhbhk5.png"%>
        <% end %>
      <h4><%= current_user.city %> <i><%= current_user.user_age %> yo</i></h4>

      <h5 class="title-dash"> About me <h5>
      <h6><%= current_user.bio %><h6>
    </div>

    <br>
    <div class="container-friend">
      <h5 class="title-dash">All my friends</h5>
        <%# 'Method friends in user model' %>
      <% current_user.friends.each do |friend| %>
       <h5> <%= link_to friend.nickname, friend_path(friend.id) %> </h5>
      <% end %>

      <h5 class="title-dash">Friend request</h5>
      <% @requests.each do |request| %>
        <% if User.find(request.friend_id) == current_user %>
          <p><%= User.find(request.user_id).nickname%> sent you a friend request</p>
          <%= button_to "CONFIRM", friendship_path(request.id, confirm: true), method: :patch, class: 'btn btn-post' %>
          <%= button_to "REMOVE", friendship_path(request.id, confirm: false), method: :patch, class: 'btn btn-post'%>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="container-right">
      <h3>New post</h3>
    <div class="container-newpost">
        <%= simple_form_for(@post) do |f| %>
          <div class="form-post">
            <div class="cont"><%= f.input :content %></div>
            <div class="btn-post"><%= f.button :submit %></div>
          </div>
       <% end %>
    </div>
    <div class="container-post">
      <h5>Friends News:</h5>
        <% @all_posts.each do |post| %>
          <ul>
            <li>
               <div class="card-post">
                 <div class = "container-top">
                    <div class="card-post-border-top">
                      <% if post.user_id == current_user.id %>
                        <%= button_to "Delete post",
                            post_path(post.id), method: :delete, class: 'btn btn-post' %>
                       <% end %>
                      <div class="img-post">
                      <% if post.user.photo.attached? %>
                      <%= cl_image_tag post.user.photo.key %>
                      <%else %>
                      <%= image_tag "https://res.cloudinary.com/dcd4fkkhk/image/upload/v1678717126/No-Image_uhbhk5.png"%>
                      <% end %>
                      </div>
                   <span><%= post.user.nickname %></span>
                <p><%= post.created_at.to_s(:short) %></p>
                  </div>
                </div>

                <p class="post"> <%= post.content %></p>
                <button> like
                </button>
              </div>
            </li>
          </ul>
        <% end %>

        // <h5>Friends News:</h5>
        <%# @all_posts.each do |post| %>
          <p><b>by</b> <%#= post.user.nickname %> </p>
          <p><b>posted at</b> <%#= post.created_at %> </p>
          <p><%#= post.content %> </p>
          <%# if post.user_id == current_user.id %>
            <%#= button_to "Delete post",
                  post_path(post.id), method: :delete, class: 'btn btn-post' %>
          <%# end %>
        <%# end %>
      </div>
    </div>
</div>
