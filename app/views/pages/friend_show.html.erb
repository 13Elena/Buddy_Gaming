<%# FRIEND PROFILE INFO %>
<div class="container-show">
  <div class="flex-container space-between">
  <div class="card-show col">
    <div class="img-show">
    <br>
    <% if @friend.photo.attached? %>
          <%= cl_image_tag @friend.photo.key %>
      <%else %>
          <%= image_tag "https://res.cloudinary.com/dcd4fkkhk/image/upload/v1678372380/kisspng-emmanuel-macron-france-selfie-5b1fe5794ebb60.4981385915288170173225_qfdmzt.png"%>
    <% end %>
  </div>

    <div class="container-detail">
      <h3 class='name-show'><%= @friend.nickname%></h3>
      <br>
      <p class="detail-card"><%= @friend.user_age%></p>
      <br>
      <p class="detail-card"><%= @friend.city%><br></p>
      <p class="detail-card"><%= @friend.bio%><br></p>
      <p class="detail-card">My games :<br></p>
      <ul class="detail-card">
      <% @user_games.each_with_index do |history, index| %>
        <li>
        <% @game_detail = @game_details[index] %>
        <%= @game_detail["name"] %>
        </li>
      <% end %>
      </ul>
    </div>
  </div>
  </div>

  <%# BUTTON CHAT %>
  <%= link_to "Chat with '#{@friend.nickname}", chatroom_path(@chatroom.id)%>

  <%# POST %>
  <div class="container-post">
  <% @friend.posts.each do |post| %>
      <p><b>by</b> <%= post.user.nickname %> </p>
      <p><b>posted at</b> <%= post.created_at %> </p>
      <p><%= post.content %> </p>
  <% end %>
  </div>
</div>
