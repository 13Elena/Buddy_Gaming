

<div class="swiper-slide">
  <div class="container mx-auto mt-4">
    <%# <div class="row"> %>
      <%# <div class="col-md-4"> %>
        <div class="card-choice" style="width: 18rem;">
            <% if user_game.user.photo.attached? %>
              <%= cl_image_tag user_game.user.photo.key %>
            <%else %>
              <%= image_tag "https://res.cloudinary.com/dcd4fkkhk/image/upload/v1678372380/kisspng-emmanuel-macron-france-selfie-5b1fe5794ebb60.4981385915288170173225_qfdmzt.png"%>
            <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= user_game.user.nickname %></h5>
            <h6 class="card-subtitle mb-2 text-muted"><%= user_game.user.birthday %> from<%= user_game.user.city %></h6>
            <p class="card-text">Bio:<%= user_game.user.bio %></p>
            <%= simple_form_for [user_game, @friendship] do |f| %>
              <%= f.button :submit, '❤️' %>
            <% end %>
          </div>
        </div>
      <%# </div> %>
    <%# </div> %>
  </div>
</div>
